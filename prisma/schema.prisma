generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Wenyou {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  keyVerify  Bytes      @unique
  keyEncrypt Bytes      @unique
  message    String
  Juese      Juese[]
  Xingdong   Xingdong[]
}

model Juese {
  Wenyou        Wenyou     @relation(fields: [wenyouId], references: [id])
  wenyouId      Int
  id            Int        @id @default(autoincrement())
  createdAt     DateTime   @default(now())
  keyVerify     Bytes      @unique
  keyEncrypt    Bytes      @unique
  messageData   Bytes
  messageVector Bytes      @unique
  Xingdong      Xingdong[]

  @@index([wenyouId])
}

model Xingdong {
  Wenyou        Wenyou   @relation(fields: [wenyouId], references: [id])
  wenyouId      Int
  Juese         Juese    @relation(fields: [jueseId], references: [id])
  jueseId       Int
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  messageData   Bytes
  messageVector Bytes    @unique
  zhukong       Boolean

  @@index([wenyouId])
  @@index([jueseId])
}
