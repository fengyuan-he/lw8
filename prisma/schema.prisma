generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Wenyou {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  keyVerify Bytes      @unique
  keyWrap   Bytes      @unique
  message   String
  Comment   Juese[]
  Reply     Xingdong[]
}

model Juese {
  Topic         Wenyou     @relation(fields: [topicId], references: [id])
  topicId       Int
  id            Int        @id @default(autoincrement())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  keyVerify     Bytes      @unique
  keyWrap       Bytes      @unique
  messageData   Bytes
  messageVector Bytes      @unique
  Replu         Xingdong[]

  @@index([topicId])
}

model Xingdong {
  Topic         Wenyou   @relation(fields: [topicId], references: [id])
  topicId       Int
  Comment       Juese    @relation(fields: [commentId], references: [id])
  commentId     Int
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  messageData   Bytes
  messageVector Bytes    @unique

  @@index([topicId])
  @@index([commentId])
}
